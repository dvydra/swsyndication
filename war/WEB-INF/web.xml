<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<!-- admin urls -->
	<servlet>
		<servlet-name>syndicateUrl</servlet-name>
		<servlet-class>com.swradioafrica.servlets.SyndicateUrlServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>syndicateUrl</servlet-name>
		<url-pattern>/admin/syndicateurl</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>performSyndication</servlet-name>
		<servlet-class>com.swradioafrica.servlets.PerformSyndicationsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>performSyndication</servlet-name>
		<url-pattern>/admin/performsyndication</url-pattern>
	</servlet-mapping>
	
	<!-- public urls -->
	<servlet>
		<servlet-name>serveRss</servlet-name>
		<servlet-class>com.swradioafrica.servlets.ServeRssServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>serveRss</servlet-name>
		<url-pattern>/rss</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<security-constraint>
        <web-resource-collection>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
